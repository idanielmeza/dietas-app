<body class='container'>

    <div id='kcalDiv' class="card m-2 container">
        <div class="card-body">
          <nav class="navbar navbar-expand-lg navbar-light bg-light text-center flex-nowrap">
            <div class="container-fluid">
              <h4 id='nombreUsuario' class='text-dark text-uppercase fw-bolder'>Informacion: </h4>
              <div class='d-flex'>
                <button onclick="toggleFormualrio()" class="btn btn-primary mx-2" type="button">+</button>
              </div>
              
            </div>
          </nav>
          
          <div id='formularioKcal' class="row g-3 needs-validation mt-2" novalidate>
            <div class="col-md-4">
              <label class="form-label">Edad</label>
              <input type="number" class="form-control" id="edad" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Estatura</label>
              <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend">CM</span>
                <input type="number" class="form-control" id="estatura" aria-describedby="inputGroupPrepend" required>
              </div>
            </div>
            <div class="col-md-4">
              <label class="form-label">Peso</label>
              <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend">KG</span>
                <input type="number" class="form-control" id="peso" aria-describedby="inputGroupPrepend" required>
              </div>
            </div>
            <div class="col-md-3">
              <label class="form-label">Sexo</label>
              <select class="form-select" id="sexo" required>
                <option selected disabled value="">Seleccionar</option>
                <option value='h'>Hombre</option>
                <option value='m'>Mujer</option>
              </select>
            </div>
            <div class="col-md-3">
              <label class="form-label">Actividad</label>
              <select class="form-select" id="actividad" required>
                <option selected disabled value="">Seleccionar</option>
                <option value='1.2'>Poco/Nulo</option>
                <option value='1.375'>Ligero</option>
                <option value='1.55'>Moderado</option>
                <option value='1.72'>Deportista</option>
                <option value='1.9'>Atleta</option>
              </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Objetivo</label>
                <select class="form-select" id="objetivo" required>
                  <option selected disabled value="">Seleccionar</option>
                  <option value='-1000'>Perder 1KG.Semana</option>
                  <option value='-500'>Perder 0.5KG/Semana</option>
                  <option value='0'>Mantener Peso</option>
                  <option value='+200'>Aumentar Peso Lentamente</option>
                  <option value='+500'>Aumentar Peso</option>
                </select>
              </div>
              <div class="col-md-3 d-flex align-items-end flex-column bd-highlight mt-5">
                <button id='calcular' class="btn btn-primary" type="submit">Calcular</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Informacion de kcal diarias -->
      <div id='divKcal'></div>
      <!-- Div Buscador -->
      <div id='divBuscador'></div>
      <!-- Div tabla comidas -->
      <div id='divComidas'></div>

      <footer class='d-flex justify-content-end my-2'>
        <a href="/agregar-alimentos" target="_blank" class="btn btn-secondary mx-2" type="button">Agregar Alimentos</a>
        <button onclick="cerrarSesion()" class="btn btn-danger" type="button">Salir</button>
      </footer>
      
      <script src="./js/selectores.js"></script>
      <script src="./js/buscador.js"></script>
      <script src="./js/tablaComidas.js"></script>
      <script src="./js/app.js"></script>
      <script src="./js/funciones.js"></script>
      

</body>
</html>